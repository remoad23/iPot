<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppiPot.Pages.SettingsPage">
    <ContentPage.Content>
        <TableView Intent="Settings">
            <TableRoot>
                <TableSection Title="Allgemein">
                    <SwitchCell Text="Automatisches Gießen" x:Name="AutomaticWatering" OnChanged="ToggleAutomaticWatering"  />
                    <SwitchCell Text="automatisches Licht" x:Name="AutomaticLight" OnChanged="ToggleAutomaticLight"  />
                </TableSection>
                <TableSection Title="Benachrichtigungen">
                    <SwitchCell x:Name="NotificationWater" Text="Wasser" OnChanged="ToggleNotificationWater" />
                    <SwitchCell x:Name="NotificationLight" Text="Licht" OnChanged="ToggleNotificationLight"  />
                    <SwitchCell x:Name="NotificationMoisture" Text="Bodenfeuchtigkeit" OnChanged="ToggleNotificationMoisture" />
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>